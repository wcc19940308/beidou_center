@Controller
@RequestMapping("/role")
public class RoleController {

	private Logger logger = Logger.getLogger(getClass());
	
	@Resource
	private IBdRoleService roleService;
	
	@RequestMapping("/toRoleList")
	public String toRoleList(HttpServletRequest request, Model model){
		
