                .left {
                    width: 50%;
                    height: 600px;
                    /* background: red; */
                    float: left;
                    display: table;
                    text-align: center;
                    line-height: 600px;
                    /* color: #fff; */
                }

                .right {
                    margin-left: 20em;
                    margin-top: 50px;
                    height: 300px;
                    /* background: yellow; */
                    text-align: center;
                    line-height: 600px;
                }
            </style>